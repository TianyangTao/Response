<van-search
  value="{{value}}"
  label="书名"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:search="onSearch"
  bind:change="onChangeSearch"
>
  <view slot="action" bind:tap="onSearch">搜索</view>
</van-search>
<block wx:for="{{products}}">
    <van-panel title="{{item.title}}" desc="" status="{{item.situation}}" use-footer-slot>
    <view slot="footer">
      <van-button size="small" onclick>取消</van-button>
      <van-button size="small" type="danger"bind:click="borrowbook">预约</van-button>
    </view>
  </van-panel>
</block>
<van-overlay show="{{ show }}" bind:click="onClickHide">
  <view class="wrapper">
    <text class="textsize">{{bookid}}</text>
  </view>
</van-overlay>
<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="home-o">书籍</van-tabbar-item> 
  <van-tabbar-item icon="search">书库</van-tabbar-item>
  <van-tabbar-item icon="friends-o">个人中心</van-tabbar-item>
</van-tabbar>